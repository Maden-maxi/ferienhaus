.intro
    position relative
    display flex
    justify-content center
    align-items center
    background transparent url('../img/bg.jpg') 0 0 no-repeat
    size 100% 100vh
    max-height 858px
    background-size 100% 100%
    overflow hidden
.circle
    absolute top left
    &-big,&-medium,&-small
        opacity 0
        position absolute
        border-radius 100%
    &-big,&-medium
        border 1px solid #fff
    &-big
        size $circleBig
        posC($circleBig)
        animation pulse 6s linear 4s infinite
    &-medium
        size $circleMedium
        posC($circleMedium)
        animation pulse 6s linear 2s infinite
    &-small
        size $circleSmall
        posC($circleSmall)
        border 2px solid #fff
        animation pulse 6s linear 0s infinite
        &-wrapper
            position absolute
            left calc(100vw/ 2 - 65px * 1.5 /2)
            top calc(100vh / 2 - -380px/2)
            color #000
            text-decoration none
            z-index 1
        &-arrow
            cursor pointer
            display flex
            align-items center
            justify-content center
            size 65px
            background #1a1a18 url('../img/arrow_down.png') 0 0 no-repeat
            background-size cover
            border-radius 100%
            animation updown .5s linear 1s infinite alternate
            &:hover
                animation-play-state paused

.site-title
    color #ffffff
    text-align center
    &_main
        font 135px $swift, sans-serif
    &_subtitle
        font 69px $circeB, sans-serif
    &_subtitle-1
        font 25px $circeB, sans-serif
    &_subtitle-2
        font 17px $circeL, sans-serif
@keyframes pulse
    from
        opacity 0
        border 2px solid #ffffff
    10%
        opacity 1
    50%

        border-width 0.5px
    to
        posC(1368px)
        size 1368px
        max-width $wrapperWidth
        border 1 solid #ffffff
        opacity 0
@keyframes pulseTwo
    from
        size $circleMedium
        posC($circleMedium)
    to
        size $wrapperWidth
        posC($wrapperWidth)
@keyframes updown
    0%
        transform translateY(0)
    100%
        transform translateY(-20px) 