footer
	centering()
.map
	width 100%
	height 626px
.widget
	display flex
	flex-flow row wrap
	margin-top 70px
	&__wrapper
		flex 1 0 400px
	&__title,h2
		font 20px $circeR,Arial,sans-serif
		color $titleColor
		padding 15px 15px 15px 0
	&__text,div
		font 16px $circeL,Arial,sans-serif
		color $textColor
		padding 0 59px 59px 0
address
	border-top 1px solid #e1e1e1
.contact
	display flex
	align-items center
	flex-flow row wrap
	justify-content space-between
	@media screen and (max-width: 980px)
		flex-flow column wrap
		align-items flex-start
		padding 0 10vw
	&__info
		display flex
		align-items center
		padding 66px 0
		font 24px $circeR, Arial,sans-serif
		color #6d6d6d
		.fa
			display flex
			justify-content center
			align-items center
			color #fff
			background #000
			//padding 3px 10px
			size 39px
			margin-right 18px
			text-align center
		@media screen and (max-width: 980px)
			padding 20px 0