#cards
	margin-top 214px
	margin-bottom 95px
.cards
	centering()
	display flex
	flex-flow row wrap
.card
	position relative
	flex 1 0 400px
	color #fff
	text-align center
	margin 0 3px 3px 0
	transition all 0.6s ease
	transform-style preserve-3d
	&_lands
		&-right
			z-index 0
		&-left
			margin-right -75px
			z-index 1
		
	img
		position absolute
		top 0
		left 0
		size 100%
		transition all 0.4s
	/*	
	&:hover
		transform rotateY(180deg)
	*/	
	&__container
		perspective 700
		size auto 389px
		overflow hidden
		&_lands-left
			size 583px 440px
		&_lands-right
			size 662px 496px
			img
				paddin 92px 105px
		//background transparent url(../) 0 0 no-repeat
	&__front,&__back
		position absolute
		top 0px
		left 0px
		backface-visibility hidden
	&__front
		display flex
		justify-content center
		align-items center
		top 0
		left 0
		size 100%
	&__back
		display flex
		flex-flow column wrap
		justify-content space-around
		size 410px 219px
		padding 85px
		background alpha(#000,.7)
		transform rotateY(180deg)
	&__title
		display flex
		flex-flow column wrap
		z-index: 1
		background alpha(#000,.7)
		padding: 72px 123px
		&-text
			margin 10px 0
			font 30px $circeB,Arial,sans-serif
			&_lands
				text-transform uppercase
	&__text
		font 20px $circeR,sans-serif
	&__button
		align-self center
		padding 20px 40px
		cursor pointer
		font 16px $circeR,Arial,sans-serif
		text-decoration none
		color #fff
		background-color transparent
		border 2px solid #fff
		&:hover
			background-color #fff
			color #000
.card:hover > .card_front
	background #f00
	