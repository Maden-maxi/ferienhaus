				right $arrowsMobile
			#next
				left $arrowsMobile
	.carousel
		height $MobilehSlide
		li
			width $MobilewSlide
			height $MobilehSlide
		.left-pos,.right-pos
			display none
	.dots
		margin-top -40px
	.land-card
		padding 0
	#lands
		margin-top 100px
	#cards
		margin-top 0
	.hause-card
		
		padding 0
		&__description
			padding 20px
			flex 1 0 300px
		&__title
			margin-bottom 20px
		&__img
			height 290px
			&_wrapper
				flex 1 0 300px
	.card
		flex 1 0 300px
		display flex
		justify-content center
		&__title
			padding 20px 50px
		&__container
			width 345px
			height 240px
	.about
		margin 0	
		&__article
			padding 20px
			flex 1 0 300px
		&__img
			height 270px
	.widget
		padding 20px
		margin 0
		&__text
			padding 0
		&__wrapper
			flex 1 0 300px
	.contact
		padding 10px
		&__info
			padding 10px 0
	.connected-carousels .carousel-popup img
		width 350px
		height 270px
	.connected-carousels .carousel-stage
		height 260px
	.connected-carousels .next-stage, .connected-carousels .prev-stage
		color #9ed24d
	.connected-carousels .next-stage, .connected-carousels .prev-stage
		font-size 40px
	.connected-carousels .prev-stage, .connected-carousels .next-stage
		width 100px
