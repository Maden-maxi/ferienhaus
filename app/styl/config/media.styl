@media screen and (min-width: 1860px)
	.wrapper
		padding 30px
		border-radius 110px
	.circle
		&-big
			posC($circleBig, 1860px, 858px)
		&-medium
			posC($circleMedium, 1860px, 858px)
		&-small
			posC($circleSmall, 1860px, 858px)
			&-wrapper
				left calc(1860px/ 2 - 65px * 1.5 / 2)
				top calc(858px / 2 - -380px/2)
$backPosLarge = 212px
@media screen and (max-width: 1035px)
	.nav
		&.fixed_more
			.nav__list
				height auto
				&_inner
					height 0
			.nav__item
				height 75px
			.nav__link
				line-height 75px
		&__navbar
			display block
		ul
			display none
			width 100%
			height auto
			flex-flow column wrap
			ul
				flex-flow column wrap
				&-contact
					left 0
		li
			border-bottom 3px solid $hoverColor
			&:hover ul
				flex-flow column
				justify-content center
				height auto
				z-index 1
				width 100%
			&:last-child
				ul
					left 0
		a
			padding 0
	.carousel
		.right-pos
			margin-left $backPosLarge
		.left-pos
			margin-left - $backPosLarge
	.mCS-sq-bar.mCSB_scrollTools
		right 20.5px
	.mfp-close
		right 21px	
	.popup
		max-width 880px
	.circle-small-wrapper
		left calc(100vw / 2 - 65px  / 2)
@media screen and (max-width: $containerWidth)
	.land-card
		flex-direction column
	.card_lands-left
		margin-right 0
	.about__article-bottom,.widget
		padding 100px
$TabletwSlide = 600px
$TablethSlide = 355px
$TabletBackPos = 0px
@media screen and (max-width: 768px)
	.popup-close
		display block
		right 55px
		top 110px
		a
			color #f00
	.btn__mobile_visible
		display block
	.btn__mobile_hidden
		display none
	.site-title
		&_main
			font-size 100px
		&_subtitle
			font-size 60px
	section#carousel
		width $TabletwSlide
		height $TablethSlide
		span
			left $arrowsTablet=215px
			top -14em
			#prev
				right $arrowsTablet
			#next
				left $arrowsTablet
	.carousel
		height $TablethSlide
		li
			width $TabletwSlide
			height $TablethSlide
		.right-pos
			margin-left  $TabletBackPos
		.left-pos
			margin-left - $TabletBackPos
	.hause-card__title
		margin-top 20px
	.popup
		max-width 85vw
	.connected-carousels .stage
		flex-flow row wrap
		margin 0
	.connected-carousels .stage-aside
		flex-flow row wrap
	.connected-carousels .stage-aside__list
		flex-flow column
	.btn__room-content
		margin-top 0
		margin-left 40px
	.room-content
		flex-flow row wrap
	.carousel-popup .carousel-stage
		margin 0
	.connected-carousels .carousel-stage
		//height 56vw
		margin 0
	.connected-carousels .carousel-popup
		flex 1 0 450px
	.connected-carousels .carousel-popup img
		width 85vw
	.connected-carousels .next-stage
		right 0
	.map
		width 90%
		height 70vh
		margin auto
	.connected-carousels .next-stage, .connected-carousels .prev-stage
		font-size 40px
	.connected-carousels .prev-stage, .connected-carousels .next-stage
		width 100px
		height 400px
@media screen and (max-width: 600px)
	.popup
		max-width 450px
	.btn__room-content
		margin-top 20px
		margin-left 0
	.connected-carousels .carousel-stage
		height auto
	.connected-carousels .stage-aside__list
		padding 0
	.connected-carousels .carousel-popup img
		width 450px
	.connected-carousels .carousel-popup
		flex 1 0 300px
	.connected-carousels .stage-aside
		flex-flow column wrap
	.connected-carousels .navigation
		display none
	.connected-carousels .next-stage, .connected-carousels .prev-stage
		font-size 40px
	.connected-carousels .prev-stage, .connected-carousels .next-stage
		width 100px
		height 400px
	.marker
		flex-flow row wrap
		justify-content space-between
		&__marker
			margin 0
$MobilewSlide = 340px
$MobilehSlide = 240px
